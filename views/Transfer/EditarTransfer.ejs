<!DOCTYPE html>
<html lang="es">

<head>
    <title>Nuevo Transfer</title>
    <link rel="shortcut icon" href="../img/icons/icon.png" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" href="../../resources/css/layout.css">
    <link rel="shortcut icon" href="../../resources/img/SIR.png" />
    <style>
        #dropdown:checked,
        #dropdown:not(:checked) {
            position: absolute;
            left: -9999px;
            opacity: 0;
            pointer-events: none;
        }

        .dropdown:checked+label,
        .dropdown:not(:checked)+label {
            position: relative;
            font-weight: 500;
            font-size: 15px;
            line-height: 2;
            height: 40px;
            transition: all 200ms linear;
            border-radius: 4px;
            width: 100%;
            letter-spacing: 1px;
            display: -webkit-inline-flex;
            display: -ms-inline-flexbox;
            display: inline-flex;
            -webkit-align-items: center;
            -moz-align-items: center;
            -ms-align-items: center;
            align-items: center;
            -webkit-justify-content: center;
            -moz-justify-content: center;
            -ms-justify-content: center;
            justify-content: center;
            -ms-flex-pack: center;
            text-align: center;
            border: none;
            background-color: #1f2029;
            cursor: pointer;
            color: #c4c3ca;
        }

        .section-dropdown {
            position: absolute;
            padding: 5px;
            background-color: #111;
            margin: 10px;
            left: 0;
            max-width: 300px;
            border-radius: 4px;
            display: block;
            box-shadow: 0 14px 35px 0 rgba(9, 9, 12, 0.4);
            z-index: 2;
            opacity: 0;
            pointer-events: none;
            transform: translateY(20px);
            transition: all 200ms linear;
        }

        .dark-light:checked~.sec-center .section-dropdown {
            background-color: #fff;
            box-shadow: 0 14px 35px 0 rgba(9, 9, 12, 0.15);
        }

        .dropdown:checked~.section-dropdown {
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0);
        }

        .section-dropdown:before {
            position: absolute;
            top: -20px;
            left: 0;
            width: 100%;
            height: 20px;
            content: '';
            display: block;
            z-index: 1;
        }

        .section-dropdown:after {
            position: absolute;
            top: -7px;
            left: 30px;
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-bottom: 8px solid #111;
            content: '';
            display: block;
            z-index: 2;
            transition: all 200ms linear;
        }



        .form-styleCount {
            padding: 13px 20px;
            padding-left: 55px;
            margin-top: 5px;
            height: 48px;
            width: 100%;
            font-weight: 500;
            border-radius: 4px;
            font-size: 14px;
            line-height: 22px;
            letter-spacing: 0.5px;
            outline: none;
            color: #c4c3ca;
            background-color: #1f2029;
            border: none;
            -webkit-transition: all 200ms linear;
            transition: all 200ms linear;
            box-shadow: 0 4px 8px 0 rgba(21, 21, 21, .2);
        }

        .custom-btn {
            width: 60px;
            height: 40px;
            color: #fff;
            border-radius: 5px;
            padding: 10px 25px;
            font-family: 'Lato', sans-serif;
            font-weight: 500;
            background: transparent;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            display: inline-block;
            box-shadow: inset 2px 2px 2px 0px rgba(0, 0, 0, 0.5),
                7px 7px 20px 0px rgba(0, 0, 0, .1),
                4px 4px 5px 0px rgba(0, 0, 0, .1);
            outline: none;
        }

        .remove {
            background: rgb(240, 9, 9);
            background: linear-gradient(0deg, rgb(240, 9, 9) 0%, rgb(240, 5, 5) 100%);
            border: none;

        }

        .remove:before {
            height: 0%;
            width: 2px;
        }

        .remove:hover {
            box-shadow: 4px 4px 6px 0 rgb(45, 29, 29),
                -4px -4px 6px 0 rgb(45, 28, 28),
                inset -4px -4px 6px 0 rgba(255, 255, 255, .2),
                inset 4px 4px 6px 0 rgba(0, 0, 0, .4);
        }

        .btnn {
            background-color: #102770;
            color: #fff;
        }

        .icon-btn {
            width: 50px;
            height: 50px;
            border: 1px solid #1f2029;
            background: #1f2029;
            border-radius: 25px;
            overflow: hidden;
            position: relative;
            transition: width 0.2s ease-in-out;
            color: #fff;
        }

        .add-btn:hover {
            width: 120px;
        }

        .add-btn::before,
        .add-btn::after {
            transition: width 0.2s ease-in-out, border-radius 0.2s ease-in-out;
            content: "";
            position: absolute;
            height: 4px;
            width: 10px;
            top: calc(50% - 2px);
            background: red;
        }

        .plus::before,
        .plus::after {
            background: #66ff00;
        }

        .add-btn::after {
            right: 14px;
            overflow: hidden;
            border-top-right-radius: 2px;
            border-bottom-right-radius: 2px;
        }

        .add-btn::before {
            left: 14px;
            border-top-left-radius: 2px;
            border-bottom-left-radius: 2px;
        }

        .icon-btn:focus {
            outline: none;
        }

        .btn-txt {
            opacity: 0;
            transition: opacity 0.2s;
            font-size: 13px;
        }

        .add-btn:hover::before,
        .add-btn:hover::after {
            width: 4px;
            border-radius: 2px;
        }

        .add-btn:hover .btn-txt {
            opacity: 1;
        }

        .add-icon::after,
        .add-icon::before {
            transition: all 0.2s ease-in-out;
            content: "";
            position: absolute;
            height: 20px;
            width: 2px;
            top: calc(50% - 10px);
            background: #66ff00;
            overflow: hidden;
        }

        .add-icon::before {
            left: 22px;
            border-top-left-radius: 2px;
            border-bottom-left-radius: 2px;
        }

        .add-icon::after {
            right: 22px;
            border-top-right-radius: 2px;
            border-bottom-right-radius: 2px;
        }

        .add-btn:hover .add-icon::before {
            left: 15px;
            height: 4px;
            top: calc(50% - 2px);
        }

        .add-btn:hover .add-icon::after {
            right: 15px;
            height: 4px;
            top: calc(50% - 2px);
        }

        #search {
            top: 45px;
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        #search::before {
            display: block;
            position: absolute;
            z-index: 1 !important;
        }

        #search::after {
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        .list-group-color {
            background: #1f2029;
            color: #fff;
        }

        .list-group-disabled-bg {
            background: #1f2029 !important;
            color: #fff !important;
        }

        .list-group-create-color {
            background: #1f2029;
            color: #45acdf;
        }

        .list-group-create-color:hover {
            background: #2a2f3a;
            color: #45acdf;
        }

        .list-group-color:hover,
        .list-group-disabled-color:hover {
            background: #2a2f3a;
            color: #fff;
        }
    </style>
</head>

<body>

    <% if (typeof Transfer !="undefined" ) { %>
        <main class="content">

            <div class="container-fluid p-0">
                <div class="container">
                    <button class="back-button" onclick="window.location.href = '../../Transfer/VerTransfer'">&larr; Volver</button>
                    <div class="card">
                        <div class="card-header">
                            <div class="input-group">
                                <h3 class="mb-0">
                                    <strong>Transfer: <%= Transfer.Id_Transfer %> </strong> &nbsp;&nbsp;&nbsp;
                                </h3>
                            </div>
                            <span style="font-size: 12px">Los campos con <span class="text-danger">*</span> son
                                obligatorios.</span>
                        </div>
                        <div class="card-body">
                            <form action="/EditarTransfer" method="POST" autocomplete="off">
                                <input type="hidden" name="Id_Transfer" id="Id_Transfer"
                                    value="<%= Transfer.Id_Transfer %>">
                                <% if (typeof user !="undefined" ){ %>
                                    <input type="hidden" name="id_user" id="" value="<%=user.id_user %>">
                                    <% } %>
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="fw-bold">Numero de Pasajeros:</label>
                                                <input type="text" name="NumPas" class="form-style mayusculas "
                                                    placeholder="Número de pasajeros" id="NumPas"
                                                    value="<%= Transfer.NumeroPasajeros %>" autocomplete="off">
                                                <input type="text" name="Old_Pasajeros" id="Old_Pasajeros"
                                                    value="<%= Transfer.NumeroPasajeros %>">
                                                <input type="text" name="New_Pasajeros" id="New_Pasajeros">
                                            </div>
                                            <div class="col-lg-3">
                                                <label class="fw-bold">Tipo de servicio</label>
                                                <select name="Servicio" id="Servicio" class="form-style mayusculas ">
                                                    <% if (typeof resultsServicio !="undefined" ){
                                                        resultsServicio.forEach((Servicio)=>{
                                                        %>
                                                        <option value="<%= Servicio.id %>">
                                                            <%= Servicio.Servicio %>
                                                        </option>
                                                        <% }) } %>
                                                </select>
                                            </div>
                                            <div class="col-lg-3">
                                                <label class="fw-bold">Punto de salida</label>
                                                <div class="input-group mb-3">
                                                    <input type="text" name="Salida" class="form-style mayusculas "
                                                        value="<%= Transfer.Salida %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <label class="fw-bold">Punto de llegada</label>
                                                <div class="input-group mb-3">
                                                    <input type="text" name="Llegada" class="form-style mayusculas "
                                                        value="<%= Transfer.Llegada %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="fw-bold">Elige la fecha<span
                                                        style="color: red">*</span></label>
                                                <input type="date" class="form-style mayusculas " name="FechaTransfer"
                                                    id="FechaTransfer" value="<%= Transfer.FechaTransfer %>" required />
                                            </div>
                                            <div class="col-lg-3">
                                                <label class="fw-bold">¿Quién Reporta?</label>
                                                <input type="text" class="form-style mayusculas " name="NombreReporta"
                                                    placeholder="Nombre" value="<%= Transfer.NombreReporta %>" />
                                            </div>
                                            <div class="col-lg-3">
                                                <label class="fw-bold">Hora recogida</label>
                                                <input type="text" class="form-style mayusculas " name="HoraRecogida"
                                                    id="HoraSalida" value="<%= Transfer.HoraRecogida %>" />
                                            </div>
                                            <div class="col-lg-3">
                                                <label class="fw-bold"># Vuelo</label>
                                                <input type="text" class="form-style mayusculas " name="Vuelo" id="Vuelo"
                                                    value="<%= Transfer.Vuelo %>" />
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="fw-bold"># Tel. Reserva<span
                                                        style="color: red">*</span></label>
                                                <input type="text" class="form-style mayusculas " name="TelefonoTransfer"
                                                    id="TelefonoTransfer" value="<%= Transfer.TelefonoTransfer %>"
                                                    required autocomplete="off" />
                                            </div>
                                            <div class="col-lg-3">
                                                <label class="fw-bold">Valor del servicio</label>
                                                <input type="text" class="form-style mayusculas " name="ValorServicio"
                                                    value="<%= Transfer.ValorServicio %>" />
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <label class="fw-bold">Observaciones</label>
                                            <div class="form-floating">
                                                <input type="text" class="form-style mayusculas "
                                                    value="<%=Transfer.Observaciones %>" name="Observaciones"
                                                    style="height: 100px">
                                            </div>
                                        </div>
                                        <br />
                                        <div class="input-group">
                                            <h3 class="mb-0">
                                                <strong>Datos de los pasajeros</strong> &nbsp;
                                            </h3>
                                        </div>
                                        <br />
                                        <div>
                                            <h3>Pasajeros</h3>
                                            <div id="div_Pasajeros">
                                            </div>
                                            <br>
                                            <div class="">
                                                <button type="button" class="icon-btn add-btn plus"
                                                    id="Agregar_Pasajero">
                                                    <div class="add-icon"></div>
                                                    <div class="btn-txt">Agregar</div>
                                                </button>
                                            </div>
                                            <hr>
                                        </div>
                                        <div class=" d-flex align-items-center justify-content-end ">
                                            <button type="button" class="btn btn-primary btn-lg"
                                                id="save-btn">Guardar</button>
                                        </div>
                                        <input type="submit" value="" id="Submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#Servicio').val('<%=Transfer.Servicio %>');
            });
        </script>
        <% } %>

            <% if(typeof alert !="undefined" ){ %>
                <script>
                    swal({
                        title: '<%= alertTitle %>',
                        text: '<%= alertMessage %>',
                        icon: '<%= alertIcon %>',
                        showConfirmButton: '<%= showConfirmButton %>',
                        timer: '<%= timer %>'
                    }).then(() => {
                        window.location = '/<%= ruta %>'
                    })
                </script>
                <% } %>

                    <script>

                        $("#save-btn").click(() => {
                            swal({
                                title: "¿Todo Listo?",
                                icon: "warning",
                                buttons: true,
                                dangerMode: true,
                            })
                                .then((go) => {
                                    if (go) {
                                        $("#Submit").click()
                                    }
                                });
                        })

                        $('#NumPas').keyup(function () {
                            var val = $(this).val();
                            var innerhtml = '';
                            for (var i = 0; i < val; i++) {
                                innerhtml += "<div class='row lista-producto' id='cont_Pasajeros'><div><div class='row '><div class='form-group col-lg-3'><label class='form-label'>Nombre</label><input name='NomPas[]' class='form-style mayusculas ' /></div><div class='form-group col-lg-2'><label class='form-label'>Dni/Pasaporte </label><input name='IdPas[]' class='form-style mayusculas ' /></div><div class='form-group col-lg-2'><label class='form-label'>Teléfono </label><input name='Telefono[]' class='form-style mayusculas ' /></div><div class='form-check col-lg-2 g-3 d-flex align-items-end justify-content-center'><div><button type='button' class='icon-btn add-btn'><div class='btn-txt' id='removePasajero'>Eliminar</div></button></div></div></div><br /></div></div>";

                            }
                            var dis = $('#div_Pasajeros');
                            dis.html(innerhtml);
                        });
                        //---------------------------------------------------------------- JSON --------------------------------------------------------

                        $(document).ready(function () {
                            var Id_Transfer = $('#Id_Transfer').val();
                            load_Pas(Id_Transfer)
                        });
                        load_Pas = (Id_Transfer) => {
                            fetch('/EditarTransfer/Pasajeros?Id_Transfer=' + Id_Transfer + '').then(function (response) {

                                return response.json();

                            }).then(function (responseData) {


                                if (responseData.length > 0) {
                                    var html = '';
                                    var dis = $('#div_Pasajeros');
                                    for (var count = 0; count < responseData.length; count++) {


                                        html += "<div class='row lista-producto' id='" + responseData[count].id + "'><div><div class='row '><div class='form-group col-lg-3'><label class='form-label'>Nombre</label><input name='NomPas[]' class='form-style mayusculas ' value='" + responseData[count].NombrePasajero + "'/></div><div class='form-group col-lg-2'><label class='form-label'>Dni/Pasaporte </label><input name='IdPas[]' class='form-style mayusculas ' value='" + responseData[count].IdPas + "'/></div><div class='form-group col-lg-2'><label class='form-label'>Teléfono </label><input name='Telefono[]' class='form-style mayusculas ' value='" + responseData[count].TelefonoPasajero + "'/></div><div class='form-check col-lg-2 g-3 d-flex align-items-end justify-content-center'><div><button type='button' class='icon-btn add-btn'><div class='btn-txt' onclick='removePasajero(" + responseData[count].id + ");'>Eliminar</div></button><input type='hidden' name='id[]' value='" + responseData[count].id + "'></div></div></div><br/></div></div>";

                                        $(dis).html(html);
                                    }
                                }

                            });
                        }


                        DeletePasajero = (id) => {
                            fetch('/EditarTransfer/DeletePasajero?id=' + id + '').then(function (response) {

                                return response.json();

                            }).then(function (responseData) {

                                if (responseData == 'error') {
                                    swal({
                                        title: "Ocurrió un error",
                                        text: "No fue posible eliminar el pasajero, Si el error continúa, comuníquese con soporte técnico.",
                                        icon: "error",
                                        buttons: true,
                                        dangerMode: true,
                                    })
                                } else {
                                    $('#' + responseData + '').remove();
                                }

                            });
                        }


                        //--------------------------------------------------------------------------------------------------------------

                        removePasajero = (id) => {
                            var NumPas = $('#NumPas').val();
                            var num = parseInt(NumPas) - 1;
                            $('#NumPas').val(num);

                            DeletePasajero(id);

                        };

                        $('#Agregar_Pasajero').click(() => {
                            var val = $('#NumPas').val();
                            if (val == '') {
                                val = 0;
                            }
                            var New = $('#New_Pasajeros').val();
                            if (New == '') {
                                New = 0;
                            }

                            var NewPas = parseInt(New) + 1;
                            var num = parseInt(val) + 1;
                            var innerhtml = '';
                            innerhtml += "<div class='row lista-producto' id='cont_Pasajeros'><div><div class='row '><div class='form-group col-lg-3'><label class='form-label'>Nombre</label><input name='New_NomPas[]' class='form-style mayusculas ' /></div><div class='form-group col-lg-2'><label class='form-label'>Dni/Pasaporte </label><input name='New_IdPas[]' class='form-style mayusculas ' /></div><div class='form-group col-lg-2'><label class='form-label'>Teléfono </label><input name='New_Telefono[]' class='form-style mayusculas ' /></div><div class='form-check col-lg-2 g-3 d-flex align-items-end justify-content-center'><div><button type='button' class='icon-btn add-btn'><div class='btn-txt' id='removeNewPasajero'>Eliminar</div></button></div></div></div><br /></div></div>";

                            var dis = $('#div_Pasajeros');
                            dis.append(innerhtml);
                            $('#NumPas').val(num);
                            $('#New_Pasajeros').val(NewPas);

                        });

                        $(document).on('click', '#removeNewPasajero', function () {
                            var val = $('#NumPas').val();
                            var num = parseInt(val) - 1;
                            $('#NumPas').val(num);
                            $(this).closest('#cont_Pasajeros').remove();


                        });

                        $(document).ready(() => {
                            $("form").keypress((e) => {
                                if (e.which == 13) {
                                    return false;
                                }
                            });
                        });

                        var fecha = new Date();
                        var dia = String(fecha.getDate()).padStart(2, '0');
                        var mes = String(fecha.getMonth() + 1).padStart(2, '0');
                        var año = fecha.getFullYear();
                        var FechaMin = año + '-' + mes + '-' + dia

                        console.log(FechaMin);

                        $("#FechaTransfer").attr('min', FechaMin);

                        $(document).ready(function () {
                            $("form").keypress(function (e) {
                                if (e.which == 13) {
                                    return false;
                                }
                            });
                        });

                        $("#Layout_NuevaReserva").attr("href", "../../Reservas/NuevaReserva");
                        $("#Layout_VerReservas").attr("href", "../../Reservas/VerReservas");
                        $("#Layout_NuevoTransfer").attr("href", "../../Transfer/NuevoTransfer");
                        $("#Layout_VerTransfer").attr("href", "../../Transfer/VerTransfer");
                        $("#Layout_NuevoTour").attr("href", "../../Tours/NuevoTour");
                        $("#Layout_VerTours").attr("href", "../../Tours/VerTours");
                        $("#Layout_NuevoPunto").attr("href", "../../Puntos/NuevoPunto");
                        $("#Layout_VerPuntos").attr("href", "../../Puntos/VerPuntos");
                        $("#Layout_OrdenarPuntos").attr("href", "../../Puntos/OrdenarPuntos");
                        $("#Layout_Listado").attr("href", "../../Programacion/Listado");
                        $("#Layout_Confirmacion").attr("href", "../../Programacion/Confirmacion");
                        $("#Layout_Comisiones").attr("href", "../../Comisiones/Comisiones");
                        $("#Layout_Seguros").attr("href", "../../Seguros/Seguros");
                        $("#Layout_AdminUsers").attr("href", "../../Settings/AdminUsers");
                        $("#Layout_NewUser").attr("href", "../../Settings/NewUser");
        $("#Layout_Perfil").attr("href", "../../Settings/Perfil/<% if(typeof user !='undefined' ){ %><%= user.id %> <% } %>");
                        $("#Layout_Img").attr("src", "../../resources/img/LogoMaxitoursPNG.png")

                    </script>
</body>

