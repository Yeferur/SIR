<!DOCTYPE html>
<html lang="es	">

<head>
    <title>Nueva Reserva</title>
    <link rel="shortcut icon" href="../img/icons/icon.png" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <style>
        #dropdown:checked,
        #dropdown:not(:checked) {
            position: absolute;
            left: -9999px;
            opacity: 0;
            pointer-events: none;
        }

        .dropdown:checked+label,
        .dropdown:not(:checked)+label {
            position: relative;
            font-weight: 500;
            font-size: 15px;
            line-height: 2;
            height: 40px;
            transition: all 200ms linear;
            border-radius: 4px;
            width: 100%;
            letter-spacing: 1px;
            display: -webkit-inline-flex;
            display: -ms-inline-flexbox;
            display: inline-flex;
            -webkit-align-items: center;
            -moz-align-items: center;
            -ms-align-items: center;
            align-items: center;
            -webkit-justify-content: center;
            -moz-justify-content: center;
            -ms-justify-content: center;
            justify-content: center;
            -ms-flex-pack: center;
            text-align: center;
            border: none;
            background-color: #1f2029;
            cursor: pointer;
            color: #c4c3ca;
        }

        .section-dropdown {
            position: absolute;
            padding: 5px;
            background-color: #111;
            margin: 10px;
            left: 0;
            max-width: 300px;
            border-radius: 4px;
            display: block;
            box-shadow: 0 14px 35px 0 rgba(9, 9, 12, 0.4);
            z-index: 2;
            opacity: 0;
            pointer-events: none;
            transform: translateY(20px);
            transition: all 200ms linear;
        }

        .dark-light:checked~.sec-center .section-dropdown {
            background-color: #fff;
            box-shadow: 0 14px 35px 0 rgba(9, 9, 12, 0.15);
        }

        .dropdown:checked~.section-dropdown {
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0);
        }

        .section-dropdown:before {
            position: absolute;
            top: -20px;
            left: 0;
            width: 100%;
            height: 20px;
            content: '';
            display: block;
            z-index: 1;
        }

        .section-dropdown:after {
            position: absolute;
            top: -7px;
            left: 30px;
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-bottom: 8px solid #111;
            content: '';
            display: block;
            z-index: 2;
            transition: all 200ms linear;
        }



        .form-styleCount {
            padding: 13px 20px;
            padding-left: 55px;
            margin-top: 5px;
            height: 48px;
            width: 100%;
            font-weight: 500;
            border-radius: 4px;
            font-size: 14px;
            line-height: 22px;
            letter-spacing: 0.5px;
            outline: none;
            color: #c4c3ca;
            background-color: #1f2029;
            border: none;
            -webkit-transition: all 200ms linear;
            transition: all 200ms linear;
            box-shadow: 0 4px 8px 0 rgba(21, 21, 21, .2);
        }

        .custom-btn {
            width: 60px;
            height: 40px;
            color: #fff;
            border-radius: 5px;
            padding: 10px 25px;
            font-family: 'Lato', sans-serif;
            font-weight: 500;
            background: transparent;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            display: inline-block;
            box-shadow: inset 2px 2px 2px 0px rgba(0, 0, 0, 0.5),
                7px 7px 20px 0px rgba(0, 0, 0, .1),
                4px 4px 5px 0px rgba(0, 0, 0, .1);
            outline: none;
        }

        .remove {
            background: rgb(240, 9, 9);
            background: linear-gradient(0deg, rgb(240, 9, 9) 0%, rgb(240, 5, 5) 100%);
            border: none;

        }

        .remove:before {
            height: 0%;
            width: 2px;
        }

        .remove:hover {
            box-shadow: 4px 4px 6px 0 rgb(45, 29, 29),
                -4px -4px 6px 0 rgb(45, 28, 28),
                inset -4px -4px 6px 0 rgba(255, 255, 255, .2),
                inset 4px 4px 6px 0 rgba(0, 0, 0, .4);
        }

        .btnn {
            background-color: #102770;
            color: #fff;
        }

        .icon-btn {
            width: 50px;
            height: 50px;
            border: 1px solid #1f2029;
            background: #1f2029;
            border-radius: 25px;
            overflow: hidden;
            position: relative;
            transition: width 0.2s ease-in-out;
            color: #fff;
        }

        .add-btn:hover {
            width: 120px;
        }

        .add-btn::before,
        .add-btn::after {
            transition: width 0.2s ease-in-out, border-radius 0.2s ease-in-out;
            content: "";
            position: absolute;
            height: 4px;
            width: 10px;
            top: calc(50% - 2px);
            background: red;
        }

        .plus::before,
        .plus::after {
            background: #66ff00;
        }

        .add-btn::after {
            right: 14px;
            overflow: hidden;
            border-top-right-radius: 2px;
            border-bottom-right-radius: 2px;
        }

        .add-btn::before {
            left: 14px;
            border-top-left-radius: 2px;
            border-bottom-left-radius: 2px;
        }

        .icon-btn:focus {
            outline: none;
        }

        .btn-txt {
            opacity: 0;
            transition: opacity 0.2s;
            font-size: 13px;
        }

        .add-btn:hover::before,
        .add-btn:hover::after {
            width: 4px;
            border-radius: 2px;
        }

        .add-btn:hover .btn-txt {
            opacity: 1;
        }

        .add-icon::after,
        .add-icon::before {
            transition: all 0.2s ease-in-out;
            content: "";
            position: absolute;
            height: 20px;
            width: 2px;
            top: calc(50% - 10px);
            background: #66ff00;
            overflow: hidden;
        }

        .add-icon::before {
            left: 22px;
            border-top-left-radius: 2px;
            border-bottom-left-radius: 2px;
        }

        .add-icon::after {
            right: 22px;
            border-top-right-radius: 2px;
            border-bottom-right-radius: 2px;
        }

        .add-btn:hover .add-icon::before {
            left: 15px;
            height: 4px;
            top: calc(50% - 2px);
        }

        .add-btn:hover .add-icon::after {
            right: 15px;
            height: 4px;
            top: calc(50% - 2px);
        }

        #search {
            top: 45px;
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        #search::before {
            display: block;
            position: absolute;
            z-index: 1 !important;
        }

        #search::after {
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        .list-group-color {
            background: #1f2029;
            color: #fff;
        }

        .list-group-disabled-bg {
            background: #1f2029 !important;
            color: #fff !important;
        }

        .list-group-create-color {
            background: #1f2029;
            color: #45acdf;
        }

        .list-group-create-color:hover {
            background: #2a2f3a;
            color: #45acdf;
        }

        .list-group-color:hover,
        .list-group-disabled-color:hover {
            background: #2a2f3a;
            color: #fff;
        }
    </style>
</head>

<body>
    <main class="content">

        <div class="container-fluid p-0">
            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <div class="input-group">
                            <h3 class="mb-0">
                                <strong>Registro de Reserva:</strong> &nbsp;&nbsp;&nbsp;
                            </h3>
                        </div>
                        <span style="font-size: 12px">Los campos con <span class="text-danger">*</span> son
                            obligatorios.</span>
                    </div>
                    <div class="card-body">
                        <form action="/NuevaReserva" method="POST" autocomplete="OFF">
                            <input type="text" name="Id_Reserva" id="Id_Reserva">
                            <input type="hidden" name="id_user" id="" value="<%=user.id_user %>">

                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="fw-bold">Numero de Pasajeros:</label>
                                    <input class="dropdown" type="checkbox" id="dropdown" name="dropdown" />
                                    <label class="for-dropdown" for="dropdown" id="numpas">0</label>
                                    <input type="hidden" name="input_numpas" id="input_numpas">
                                    <input type="hidden" name="total_pas" id="total_pas">
                                    <div class="section-dropdown">
                                        <div class="form-group">
                                            <input type="text" name="adultos" class="form-styleCount"
                                                placeholder="Adultos" id="adultos" onkeyup="total(); CallCupos();"
                                                autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="niños" class="form-styleCount" placeholder="Niños"
                                                id="niños" onkeyup="total(); CallCupos();" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="infantes" class="form-styleCount"
                                                placeholder="Infantes" id="infantes" onkeyup="total(); CallCupos();"
                                                autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <label class="fw-bold">Elige el tour</label>
                                    <select class="form-style" name="SelectTour" id="SelectTour">
                                        <option selected disabled>Seleccionar</option>
                                        <% if (typeof resultsTours !="undefined" ){ resultsTours.forEach((Tours)=>{ %>
                                            <option value="<%= Tours.Id_Tour %>">
                                                <%= Tours.NombreTour %>
                                            </option>
                                            <% }) } %>
                                    </select>

                                </div>
                                <div class="col-lg-3" id="punto">
                                    <label class="fw-bold">Punto de encuentro</label>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-style" placeholder="" id="NombrePunto"
                                            name="NombrePunto">
                                        <div id="search">
                                            <span id="search_result"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <label class="fw-bold">Elige la fecha<span style="color: red">*</span></label>
                                    <input type="date" class="form-style" name="FechaReserva" id="FechaReserva"
                                        onchange="CallCupos();" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="fw-bold"># Tel. Reserva<span style="color: red">*</span></label>
                                    <input type="text" class="form-style" name="TelefonoReserva" id="TelefonoReserva"
                                        required />
                                </div>
                                <div class="col-lg-2">
                                    <label class="fw-bold">Idioma</label>
                                    <select class="form-style" name="IdiomaReserva">
                                        <option value="Español">Español</option>
                                        <option value="Inglés">Inglés</option>
                                    </select>
                                </div>
                                <div class="col-lg-2">
                                    <label class="fw-bold">Categoría</label>
                                    <select class="selectpicker form-style" title="Seleccionar" name="Categoria"
                                        id="ReportaReserva">
                                        <% if(typeof resultsCategoria !="undefined" ){
                                            resultsCategoria.forEach((Categoria)=>{ %>
                                            <option value="<%= Categoria.Id_Categoria %>">
                                                <%= Categoria.Categoria %>
                                            </option>
                                            <% }) }%>
                                    </select>
                                </div>
                                <div class="col-lg-2">
                                    <label class="fw-bold">¿Quién Reporta?</label>
                                    <input type="text" class="form-style" name="NombreReporta" placeholder="Nombre" />
                                </div>
                                <div class="col-lg-2">
                                    <label class="fw-bold">Hora recogida</label>
                                    <input type="text" class="form-style" name="HoraSalida" id="HoraSalida" />
                                </div>
                                <div class="col-lg-1">
                                    <label class="fw-bold">Ruta</label>
                                    <input type="text" class="form-style" name="Ruta" id="Ruta" />
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <label class="fw-bold">Observaciones</label>
                                <div class="form-floating">
                                    <textarea type="text" class="form-style" name="Observaciones"
                                        style="height: 100px"></textarea>
                                </div>
                            </div>
                            <br />
                            <div class="input-group">
                                <h3 class="mb-0">
                                    <strong>Datos de los pasajeros</strong> &nbsp;
                                </h3>
                            </div>
                            <br />
                            <div>
                                <h3>Adultos</h3>
                                <div id="div_adultos">
                                </div>
                                <br>
                                <div class="">
                                    <button type="button" class="icon-btn add-btn plus" id="Agregar_Adulto">
                                        <div class="add-icon"></div>
                                        <div class="btn-txt">Agregar</div>
                                    </button>
                                </div>
                                <hr>
                            </div>
                            <div>
                                <h3>Niños</h3>
                                <div id="div_niños">
                                </div>
                                <br>
                                <div class="">
                                    <button type="button" class="icon-btn add-btn plus" id="Agregar_Niños">
                                        <div class="add-icon"></div>
                                        <div class="btn-txt">Agregar</div>
                                    </button>
                                </div>
                                <hr>
                            </div>
                            <div>
                                <h3>Infantes</h3>
                                <div id="div_infantes">
                                </div>
                                <br>
                                <div class="">
                                    <button type="button" class="icon-btn add-btn plus" id="Agregar_Infantes">
                                        <div class="add-icon"></div>
                                        <div class="btn-txt">Agregar</div>
                                    </button>
                                </div>
                                <hr>
                            </div>
                            <div class=" d-flex align-items-center justify-content-end ">
                                <button type="button" class="btn btn-primary btn-lg" id="save-btn">Guardar</button>
                            </div>
                            <input type="submit" value="" id="Submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <% if(typeof alert !="undefined" ){ %>
        <script>
            swal({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: '<%= showConfirmButton %>',
                timer: '<%= timer %>'
            }).then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
        <% } %>

            <script>



                $("#save-btn").click(() => {
                    swal({
                        title: "¿Todo Listo?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true,
                    })
                        .then((go) => {
                            if (go) {
                                $("#Submit").click()
                            }
                        });
                })

                $('#adultos').keyup(function () {
                    var val = $(this).val();
                    var innerhtml = '';
                    for (var i = 0; i < val; i++) {
                        innerhtml += "<div class='row lista-producto' id='cont_adultos'><div><div class='row '><div class='form-group col-lg-3'><label class='form-label'>Nombre</label><input name='NomPas[]' class='form-style' /></div><div class='form-group col-lg-2'><label class='form-label'>Dni/Pasaporte </label><input name='IdPas[]' class='form-style IdPas' id='IdPas' onkeyup='CheckPasajeros();'/></div><div class='form-group col-lg-2'><label class='form-label'>Teléfono </label><input name='Telefono[]' class='form-style' /></div><div class='form-group col-lg-2'><label class='form-label'>Precio Tour </label><input type='text' name='Precio[]' class='form-style PrecioAdulto'></div><div class='form-group col-lg-1'><label class='form-label'>Comisión </label><input name='Comision[]' class='form-style Comision' /></div><div class='form-check col-lg-2 g-3 d-flex align-items-end justify-content-center'><div><button type='button' class='icon-btn add-btn'><div class='btn-txt' id='removeAdulto'>Eliminar</div></button></div></div><input type='hidden' name='TipoPasajero[]' value='Adulto'></div><br /></div></div>";
                    }
                    var dis = $('#div_adultos');
                    dis.html(innerhtml);
                });
                $('#niños').keyup(function () {
                    var val = $(this).val();
                    var innerhtml = '';
                    for (var i = 0; i < val; i++) {
                        innerhtml += "<div class='row lista-producto1' id='cont_niños'><div><div class='row '><div class='form-group col-lg-3'><label class='form-label  '>Nombre</label><input name='NomPas[]' class='form-style' /></div><div class='form-group col-lg-2'><label class='form-label'>Dni/Pasaporte </label><input name='IdPas[]' class='form-style' /></div><div class='form-group col-lg-2'><label class='form-label'>Teléfono </label><input name='Telefono[]' class='form-style' /></div><div class='form-group col-lg-2'><label class='form-label'>Precio Tour </label><input type='text' name='Precio[]' class='form-style PrecioNiño'></div><div class='form-group col-lg-1'><label class='form-label'>Comisión </label><input name='Comision[]' class='form-style Comision' /></div><div class='form-check col-lg-2 g-3 d-flex align-items-end justify-content-center'><div><button type='button' class='icon-btn add-btn'><div class='btn-txt' id='removeNiño'>Eliminar</div></button></div></div><input type='hidden' name='TipoPasajero[]' value='Niño'></div><br /></div></div>";
                    }
                    var dis = $('#div_niños');
                    dis.html(innerhtml);
                });
                $('#infantes').keyup(function () {
                    var val = $(this).val();
                    var innerhtml = '';
                    for (var i = 0; i < val; i++) {
                        innerhtml += "<div class='row lista-producto2' id='cont_infantes'> <div> <div class='row '> <div class='form-group col-lg-4'> <label class='form-label '>Nombre</label> <input name='NomPas[]' class='form-style' /></div><div class='form-group col-lg-3'><label class='form-label'>Dni/Pasaporte </label><input name='IdPas[]' class='form-style' /></div> <input type='hidden' name='Telefono[]' class='form-style' value='N/A'/><div class='form-group col-lg-3'><label class='form-label'>Precio Tour </label><input type='text' name='Precio[]' class='form-style PrecioInfante'></div><input type='hidden' name='Comision[]' class='form-style' value='0'/><div class='form-check col-lg-2 g-3 d-flex align-items-end justify-content-center'><div><button type='button' class='icon-btn add-btn'><div class='btn-txt' id='removeInfante'>Eliminar</div></button></div></div><input type='hidden' name='TipoPasajero[]' value='Infante'></div><br /></div></div>";
                    }
                    var dis = $('#div_infantes');
                    dis.html(innerhtml);
                });

                //---------------------------------------------------------------- JSON --------------------------------------------------------

                load_data = (query = '', Id_Tour) => {
                    fetch('/autocompletar?search_query=' + query + '&Id_Tour=' + Id_Tour + '').then((response) => {

                        return response.json();

                    }).then((responseData) => {

                        var html = '<ul class="list-group">';

                        if (responseData.length > 0) {
                            for (var count = 0; count < responseData.length; count++) {
                                var regular_expression = new RegExp('(' + query + ')', 'gi');

                                html += '<a class="list-group-item list-group-item-action list-group-color" onclick="get_text(this)">' + responseData[count].NombrePunto.replace(regular_expression, '<span class="text-primary fw-bold">$1</span>') + '</a>';
                            }
                        }
                        else {
                            html += '<a class="list-group-item list-group-item-action list-group-disabled-bg disabled ">No hay datos</a>';
                            html += '<a href="#" class="list-group-item list-group-item-action list-group-create-color">Crear nuevo punto</a>';
                        }

                        html += '</ul>';

                        document.getElementById('search_result').innerHTML = html;

                    });
                }


                load_HR = (Id_Tour, Punto) => {
                    fetch('/HoraRuta?Id_Tour=' + Id_Tour + '&Punto=' + Punto + '').then((response) => {

                        return response.json();

                    }).then((responseData) => {

                        if (responseData.length > 0) {
                            $("#Ruta").val(responseData[0].Ruta)
                            $("#HoraSalida").val(responseData[0].HoraSalida);
                            $(".PrecioAdulto").val(responseData[0].PrecioAdulto);
                            $(".PrecioNiño").val(responseData[0].PrecioNiño);
                            $(".PrecioInfante").val(responseData[0].PrecioInfante);
                            $(".Comision").val(responseData[0].Comision);
                        } else {
                            $("Ruta").val("")
                            $("#HoraSalida").val("");
                        }

                    });
                }

                Id_Reserva = (Id_Tour) => {
                    fetch('/Id_Reserva?Id_Tour=' + Id_Tour + '').then((response) => {
                        return response.json();
                    }).then((Id_Reserva) => {
                        if (Id_Reserva.length > 0) {
                            console.log(Id_Reserva);
                            $('#Id_Reserva').val(Id_Reserva);
                        }
                    })
                }

                cupos = (Id_Tour, Cupos) => {
                    fetch('/Cupos?Id_Tour=' + Id_Tour + '&Cupos=' + Cupos + '').then((response) => {
                        return response.json();
                    }).then((resCupos) => {
                        var TotalCupos = resCupos[0].Cupos
                        var FechaReserva = $('#FechaReserva').val();
                        var Id_Tour = $('#SelectTour').val();
                        fetch('/TotalPasajeros?Id_Tour=' + Id_Tour + '&FechaReserva=' + FechaReserva + '').then((res) => {
                            return res.json();
                        }).then((TotalPasajeros) => {
                            var Pasajeros = 0;
                            var NumPas = $('#input_numpas').val();
                            if (TotalPasajeros[0].Total != null) {
                                Pasajeros = TotalPasajeros[0].Total;
                            }
                            var TotalPas = Pasajeros + parseInt(NumPas);

                            if (TotalPas > TotalCupos) {
                                $("#save-btn").attr("disabled", true);
                                swal({
                                    title: "Error",
                                    text: "No tenemos suficientes cupos para la fa fecha "+FechaReserva+"... ¿Desea revisas los cupos disponibles? ",
                                    icon: "error",
                                    buttons: true,
                                    dangerMode: true,
                                })
                                    .then((go) => {
                                        if (go) {
                                            window.location = "/";
                                        }
                                    });
                            }else{
                                $("#save-btn").removeAttr("disabled");
                            }
                        })
                    })
                }


                //---------------------------------------------------------------------------------------------------------------

                var search_element = document.getElementById("NombrePunto");
                var Select = document.getElementById("SelectTour");

                search_element.onkeyup = () => {

                    var query = search_element.value;
                    var Id_Tour = Select.value;
                    load_data(query, Id_Tour);

                };

                search_element.onfocus = () => {

                    var query = search_element.value;
                    var Id_Tour = Select.value;
                    load_data(query, Id_Tour);

                    // console.log(Id_Tour)

                };

                Select.onchange = () => {
                    var Id_Tour = Select.value;
                    if (search_element.value == "") {
                        var query = search_element.value;
                        load_data(query, Id_Tour);
                    } else {
                        var Punto = document.getElementById('NombrePunto').value;
                        load_HR(Id_Tour, Punto);
                    }
                    Id_Reserva(Id_Tour);
                    CallCupos();
                };

                get_text = (event) => {
                    var Punto_Name = event.textContent;

                    document.getElementById('NombrePunto').value = Punto_Name;
                    document.getElementById('search_result').innerHTML = '';

                    var Id_Tour = Select.value;
                    var Punto = Punto_Name;
                    load_HR(Id_Tour, Punto);
                }

                CallCupos = () => {
