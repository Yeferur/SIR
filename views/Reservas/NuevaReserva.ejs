<html lang="es	">

<head>
    <title>Nueva Reserva</title>
    <link rel="shortcut icon" href="../img/icons/icon.png" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <style>
        #dropdown:checked,
        #dropdown:not(:checked) {
            position: absolute;
            left: -9999px;
            opacity: 0;
            pointer-events: none;
        }

        .dropdown:checked+label,
        .dropdown:not(:checked)+label {
            position: relative;
            font-weight: 500;
            font-size: 15px;
            line-height: 2;
            height: 40px;
            transition: all 200ms linear;
            border-radius: 4px;
            width: 100%;
            letter-spacing: 1px;
            display: -webkit-inline-flex;
            display: -ms-inline-flexbox;
            display: inline-flex;
            -webkit-align-items: center;
            -moz-align-items: center;
            -ms-align-items: center;
            align-items: center;
            -webkit-justify-content: center;
            -moz-justify-content: center;
            -ms-justify-content: center;
            justify-content: center;
            -ms-flex-pack: center;
            text-align: center;
            border: none;
            background-color: #1f2029;
            cursor: pointer;
            color: #c4c3ca;
        }

        .section-dropdown {
            position: absolute;
            padding: 5px;
            background-color: #111;
            margin: 10px;
            left: 0;
            max-width: 300px;
            border-radius: 4px;
            display: block;
            box-shadow: 0 14px 35px 0 rgba(9, 9, 12, 0.4);
            z-index: 2;
            opacity: 0;
            pointer-events: none;
            transform: translateY(20px);
            transition: all 200ms linear;
        }

        .dark-light:checked~.sec-center .section-dropdown {
            background-color: #fff;
            box-shadow: 0 14px 35px 0 rgba(9, 9, 12, 0.15);
        }

        .dropdown:checked~.section-dropdown {
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0);
        }

        .section-dropdown:before {
            position: absolute;
            top: -20px;
            left: 0;
            width: 100%;
            height: 20px;
            content: '';
            display: block;
            z-index: 1;
        }

        .section-dropdown:after {
            position: absolute;
            top: -7px;
            left: 30px;
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-bottom: 8px solid #111;
            content: '';
            display: block;
            z-index: 2;
            transition: all 200ms linear;
        }



        .form-styleCount {
            padding: 13px 20px;
            padding-left: 55px;
            margin-top: 5px;
            height: 48px;
            width: 100%;
            font-weight: 500;
            border-radius: 4px;
            font-size: 14px;
            line-height: 22px;
            letter-spacing: 0.5px;
            outline: none;
            color: #c4c3ca;
            background-color: #1f2029;
            border: none;
            -webkit-transition: all 200ms linear;
            transition: all 200ms linear;
            box-shadow: 0 4px 8px 0 rgba(21, 21, 21, .2);
        }

        .custom-btn {
            width: 60px;
            height: 40px;
            color: #fff;
            border-radius: 5px;
            padding: 10px 25px;
            font-family: 'Lato', sans-serif;
            font-weight: 500;
            background: transparent;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            display: inline-block;
            box-shadow: inset 2px 2px 2px 0px rgba(0, 0, 0, 0.5),
                7px 7px 20px 0px rgba(0, 0, 0, .1),
                4px 4px 5px 0px rgba(0, 0, 0, .1);
            outline: none;
        }

        .remove {
            background: rgb(240, 9, 9);
            background: linear-gradient(0deg, rgb(240, 9, 9) 0%, rgb(240, 5, 5) 100%);
            border: none;

        }

        .remove:before {
            height: 0%;
            width: 2px;
        }

        .remove:hover {
            box-shadow: 4px 4px 6px 0 rgb(45, 29, 29),
                -4px -4px 6px 0 rgb(45, 28, 28),
                inset -4px -4px 6px 0 rgba(255, 255, 255, .2),
                inset 4px 4px 6px 0 rgba(0, 0, 0, .4);
        }

        .btnn {
            background-color: #102770;
            color: #fff;
        }

        .icon-btn {
            width: 50px;
            height: 50px;
            border: 1px solid #1f2029;
            background: #1f2029;
            border-radius: 25px;
            overflow: hidden;
            position: relative;
            transition: width 0.2s ease-in-out;
            color: #fff;
        }

        .add-btn:hover {
            width: 120px;
        }

        .add-btn::before,
        .add-btn::after {
            transition: width 0.2s ease-in-out, border-radius 0.2s ease-in-out;
            content: "";
            position: absolute;
            height: 4px;
            width: 10px;
            top: calc(50% - 2px);
            background: red;
        }

        .plus::before,
        .plus::after {
            background: #66ff00;
        }

        .add-btn::after {
            right: 14px;
            overflow: hidden;
            border-top-right-radius: 2px;
            border-bottom-right-radius: 2px;
        }

        .add-btn::before {
            left: 14px;
            border-top-left-radius: 2px;
            border-bottom-left-radius: 2px;
        }

        .icon-btn:focus {
            outline: none;
        }

        .btn-txt {
            opacity: 0;
            transition: opacity 0.2s;
            font-size: 13px;
        }

        .add-btn:hover::before,
        .add-btn:hover::after {
            width: 4px;
            border-radius: 2px;
        }

        .add-btn:hover .btn-txt {
            opacity: 1;
        }

        .add-icon::after,
        .add-icon::before {
            transition: all 0.2s ease-in-out;
            content: "";
            position: absolute;
            height: 20px;
            width: 2px;
            top: calc(50% - 10px);
            background: #66ff00;
            overflow: hidden;
        }

        .add-icon::before {
            left: 22px;
            border-top-left-radius: 2px;
            border-bottom-left-radius: 2px;
        }

        .add-icon::after {
            right: 22px;
            border-top-right-radius: 2px;
            border-bottom-right-radius: 2px;
        }

        .add-btn:hover .add-icon::before {
            left: 15px;
            height: 4px;
            top: calc(50% - 2px);
        }

        .add-btn:hover .add-icon::after {
            right: 15px;
            height: 4px;
            top: calc(50% - 2px);
        }

        #search {
            top: 45px;
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        .search-container {
            position: relative;
        }

        .search-container .search {
            top: 45px;
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        #search::after {
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        #search::before {
            display: block;
            position: absolute;
            z-index: 1 !important;
        }

        #search::after {
            display: block;
            position: absolute;
            z-index: 2 !important;
        }

        .list-group-color {
            background: #1f2029;
            color: #fff;
        }

        .list-group-disabled-bg {
            background: #1f2029 !important;
            color: #fff !important;
        }

        .list-group-create-color {
            background: #1f2029;
            color: #45acdf;
        }

        .list-group-create-color:hover {
            background: #2a2f3a;
            color: #45acdf;
        }

        .list-group-color:hover,
        .list-group-disabled-color:hover {
            background: #2a2f3a;
            color: #fff;
        }

        /* Estilos para el modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {
            background-color: #2a2f3a;
            margin: 15% auto;
            padding: 20px;
            border: none;
            width: 40%;
        }

        .modal-header h2 {
            margin-top: 0;
        }

        .modal-body input {
            display: block;
            margin-bottom: 10px;
            padding: 10px;
        }

        .modal-footer {
            text-align: right;
        }

        .modal-footer button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .modal-footer button:hover {
            background-color: #45a049;
        }
    </style>
</head>

<body>
    <main class="content">
        <div class="container-fluid p-0">
            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <div class="input-group">
                            <h3 class="mb-0">
                                <strong>Registro de Reserva:</strong> &nbsp;&nbsp;&nbsp;
                            </h3>
                        </div>
                        <span style="font-size: 12px">Los campos con <span class="text-danger">*</span> son
                            obligatorios.</span>
                    </div>
                    <div class="card-body">
                        <form action="/NuevaReserva" method="POST" autocomplete="OFF">
                            <input type="hidden" name="Id_Reserva" id="Id_Reserva">

                            <% if (typeof user !="undefined" ){ %>
                                <input type="hidden" name="id_user" id="" value="<%=user.id_user %>">
                                <% } %>

                                    <div class="row">
                                        <div class="col-3">
                                            <label class="fw-bold">Tipo de reserva</label>
                                            <select class="form-style mayusculas  mayusculas " name="TipoReserva"
                                                id="TipoReserva">
                                                <option value="Grupal" selected>Grupal</option>
                                                <option value="Privada">Privada</option>
                                            </select>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <label class="fw-bold">Numero de Pasajeros <span
                                                    style="color: red">*</span></label>
                                            <input class="dropdown" type="checkbox" id="dropdown" name="dropdown" />
                                            <label class="for-dropdown" for="dropdown" id="numpas">0</label>
                                            <input type="hidden" name="input_numpas" id="input_numpas">
                                            <input type="hidden" name="total_pas" id="total_pas">
                                            <div class="section-dropdown">
                                                <div class="form-group">
                                                    <input type="text" name="adultos"
