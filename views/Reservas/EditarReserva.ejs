                        load_HR(Id_Tour, Punto);
                    }
                    callCupos()
                };

                call_Load_HR = () => {
                    var Punto_name = document.getElementById('Punto_1').value;
                    var Id_Tour = Select.value;
                    var Punto = Punto_name;
                    load_HR(Id_Tour, Punto);
                }
                function get_text(event, inputId) {
                    var Punto_name = event.textContent;

                    document.getElementById(inputId).value = Punto_name;
                    document.getElementById('search_result_' + inputId).innerHTML = '';
                }

                callCupos = () => {
                    var Id_Tour = Select.value;
                    var FechaReserva = $('#FechaReserva').val();
                    var Cupos = "CupoBase";

                    var fecha = new Date();
                    var FechaDia = new Date(fecha.setDate(fecha.getDate() + 1));
                    var diaActual = String(fecha.getDate()).padStart(2, '0');
                    var mesActual = String(fecha.getMonth() + 1).padStart(2, '0');

                    var diaTomorrow = String(FechaDia.getDate()).padStart(2, '0');
                    var mesTomorrow = String(fecha.getMonth() + 1).padStart(2, '0');

                    var año = fecha.getFullYear();

                    var FechaActual = año + '-' + mesActual + '-' + diaActual
                    var FechaTomorrow = año + '-' + mesTomorrow + '-' + diaTomorrow

                    if ((FechaReserva == FechaActual) || (FechaReserva == FechaTomorrow)) {
                        Cupos = "CupoDia";
                    }

                    if (Id_Tour == 1) {
                        Id_Tour = 5;
                    }

                    if ((Id_Tour != 'Seleccionar') && (FechaReserva != '')) {
                        cupos(Id_Tour, Cupos);
                    }

                }

