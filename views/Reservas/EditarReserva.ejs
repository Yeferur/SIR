                    var Nuevos = parseInt(adultos) + parseInt(niños) + parseInt(infantes);

                    numpas.html(num_pas);
                    $('#input_numpas').val(num_pas);
                    $("#total_pas").val(total);
                    $("#NewPasajeros").val(Nuevos);
                }

