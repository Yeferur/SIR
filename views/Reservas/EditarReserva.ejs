                const inputs = document.querySelectorAll("input[id^='Punto']");
                const searchResults = document.querySelectorAll("span[id^='search_result_Punto']");

                inputs.forEach((input, index) => {
                    input.addEventListener("focus", () => {
                        const search = searchResults[index];
                        search.style.display = "block";
                    });

                    input.addEventListener("blur", () => {
                        const search = searchResults[index];
                        setTimeout(() => {
                            search.style.display = "none";
                        }, 200); // Agregamos un pequeño retardo para asegurarnos de que no se borre inmediatamente el spam
                    });
                });

                modalInputs.forEach((input) => {
                    input.addEventListener('keyup', () => {
                        const query = input.value.trim();
                        const id = input.id;
                        var Id_Tour = Select.value;
                        load_data(query, Id_Tour, id);
                    });
                });

                modalInputs.forEach((input) => {
                    input.addEventListener('focus', () => {
                        const query = input.value.trim();
                        const id = input.id;
                        var Id_Tour = Select.value;
                        load_data(query, Id_Tour, id);
                    });
                });

                load_data = (query = '', Id_Tour, idInput) => {
                    fetch('/autocompletar?search_query=' + query + '&Id_Tour=' + Id_Tour + '').then(function (response) {

                        return response.json();

                    }).then(function (responseData) {

                        var html = '<ul class="list-group">';

                        if (responseData.length > 0) {
                            for (var count = 0; count < responseData.length; count++) {
                                var regular_expression = new RegExp('(' + query + ')', 'gi');

                                html += '<a class="list-group-item list-group-item-action list-group-color" onclick="get_text(this, \'' + idInput + '\'); call_Load_HR()">' + responseData[count].NombrePunto.replace(regular_expression, '<span class="text-primary fw-bold">$1</span>') + '</a>';
                            }
                        }
                        else {
                            html += '<a class="list-group-item list-group-item-action list-group-disabled-bg disabled ">No hay datos</a>';
                            html += '<a href="../../Puntos/NuevoPunto" class="list-group-item list-group-item-action list-group-create-color">Crear nuevo punto</a>';
                        }

                        html += '</ul>';

                        document.getElementById('search_result_' + idInput + '').innerHTML = html;

                    });
                }

                function load_HR(Id_Tour, Punto) {
                    fetch('/HoraRuta?Id_Tour=' + Id_Tour + '&Punto=' + Punto + '').then(function (response) {

                        return response.json();

                    }).then(function (responseData) {

                        if (responseData.length > 0) {
                            $("#Ruta").val(responseData[0].Ruta)
                            $("#HoraSalida").val(responseData[0].HoraSalida);
                            $(".PrecioAdulto").val(responseData[0].PrecioAdulto);
                            $(".PrecioNiño").val(responseData[0].PrecioNiño);
                            $(".PrecioInfante").val(responseData[0].PrecioInfante);
                            $(".Comision").val(responseData[0].Comision);
                        } else {
                            $("Ruta").val("")
                            $("#HoraSalida").val("");
                        }

                    });
                }

                function DeletePasajero(id) {
                    fetch('/DeletePasajero?id=' + id + '').then(function (response) {

                        return response.json();

                    }).then(function (responseData) {

                        if (responseData == 'error') {
                            swal({
                                title: "Ocurrió un error",
                                text: "No fue posible eliminar el pasajero, Si el error continúa, comuníquese con soporte técnico.",
                                icon: "error",
                                buttons: true,
                                dangerMode: true,
                            })
                        } else {
                            $('#' + responseData + '').remove();
                        }

                    });
                }

                cupos = (Id_Tour, Cupos) => {
                    fetch('/Cupos?Id_Tour=' + Id_Tour + '&Cupos=' + Cupos + '').then((response) => {
                        return response.json();
                    }).then((resCupos) => {
                        var TotalCupos = resCupos[0].Cupos
                        var FechaReserva = $('#FechaReserva').val();
                        var Id_Tour = $('#SelectTour').val();
                        fetch('/TotalPasajeros?Id_Tour=' + Id_Tour + '&FechaReserva=' + FechaReserva + '').then((res) => {
                            return res.json();
                        }).then((TotalPasajeros) => {
                            var Pasajeros = 0;
                            var NumPas = $('#input_numpas').val();
                            if (TotalPasajeros[0].Total != null) {
                                Pasajeros = TotalPasajeros[0].Total;
                            }
                            var TotalPas = Pasajeros + parseInt(NumPas);

                            if (TotalPas > TotalCupos) {
                                $("#save-btn").attr("disabled", true);
                                swal({
                                    title: "Error",
                                    text: "No tenemos suficientes cupos para la fa fecha " + FechaReserva + "... ¿Desea revisar los cupos disponibles? ",
                                    icon: "error",
                                    buttons: true,
                                    dangerMode: true,
                                })
                                    .then((go) => {
                                        if (go) {
                                            window.location = "/";
                                        }
                                    });
                            } else {
                                $("#save-btn").removeAttr("disabled");
                            }
                        })
                    })
                }
                //----------------------------------------------------------------------------------------

                Select.onchange = function () {
                    if (inputPrincipal.value == "") {
                        openModal();
